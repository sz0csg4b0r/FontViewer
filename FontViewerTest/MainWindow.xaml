<Window x:Class="FontViewerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontViewerTest"
        mc:Ignorable="d"
        Title="FontViewer - MyFirstWPF App"
        Height="450"
        Width="1000"
        FontSize="22"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Button x:Name="exitBtn"
                    Click="exitBtn_Click"
                    Background="MidnightBlue"
                    Foreground="White"
                    Content="Exit"
                    Width="100"></Button>
            <Border BorderBrush="MidnightBlue"
                    BorderThickness="2"
                    CornerRadius="3">
                <TextBlock Text="Válassszon a betűtípusok közül, a beviteli mezőben változtassa meg a mintaszöveget"></TextBlock>
            </Border>
        </WrapPanel>
        <TextBox DockPanel.Dock="Bottom"
                 x:Name="SampleText"
                 Text="Árvíztűrőtükörfúrógép"
                 TextWrapping="Wrap"
                 MinLines="3"
                 Background="LightGray"></TextBox>
        <ListBox DockPanel.Dock="Left"
                 ItemsSource="{x:Static Fonts.SystemFontFamilies}"
                 Width="350"
                 x:Name="FontList"></ListBox>
        <StackPanel Background="LightGray">
            <TextBlock TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,10,0,0"
                       FontFamily="{Binding ElementName=FontList, Path=SelectedItem}"
                       Text="{Binding ElementName=SampleText , Path=Text}"></TextBlock>
            <TextBlock TextWrapping="Wrap"
                       FontSize="20"
                       Margin="0,10,0,0"
                       FontFamily="{Binding ElementName=FontList, Path=SelectedItem}"
                       Text="{Binding ElementName=SampleText , Path=Text}"></TextBlock>
            <TextBlock TextWrapping="Wrap"
                       FontSize="26"
                       Margin="0,10,0,0"
                       FontFamily="{Binding ElementName=FontList, Path=SelectedItem}"
                       Text="{Binding ElementName=SampleText , Path=Text}"></TextBlock>
            <TextBlock TextWrapping="Wrap"
                       FontSize="32"
                       Margin="0,10,0,0"
                       FontFamily="{Binding ElementName=FontList, Path=SelectedItem}"
                       Text="{Binding ElementName=SampleText, Path=Text}"></TextBlock>
        </StackPanel>
    </DockPanel>
</Window>
